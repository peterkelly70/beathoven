# Discord bot token (required)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Base URL for web interface (required)
BEATHOVEN_BASE_URL=https://beathoven.computer-wizard.com.au

# Port for web server to listen on (required)
PORT=5000

# Playlist directory (optional, default: /home/beathoven/playlists)
PLAYLIST_DIR=/path/to/playlists

# Log directory (optional, default: ~/.beathoven/logs)
LOG_DIR=/path/to/logs

# Man directory (optional)
MAN_DIR=/path/to/man/

# Flask secret key (required)
FLASK_SECRET_KEY=your_secret_key_here
